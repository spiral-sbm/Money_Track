<h1>Bank Accounts</h1>

<%= link_to 'New Bank Account', new_bank_account_path %>

<table>
  <thead>
    <tr>
      <th>Bank Name</th>
      <th>Account Type</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.bank_name %></td>
        <td><%= bank_account.account_type %></td>
        <td><%= number_to_currency(bank_account.balance) %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, data: { turbo_method: :delete, turbo_confirm: "VocÃª tem certeza?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
